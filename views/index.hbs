

    <section>

        <div class="container mt-5">
            <div class="row">

                {{#each product}}
                <div class="col-md-3 p-3" >

                    <div class="card" style="width: 15rem; height:22rem" >
                        <img style="width:11rem ;height:13rem " src="/product-image/{{this._id}}.jpg" class="card-img-top ml-3" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.price}}</p>
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>

                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>

    </section>
